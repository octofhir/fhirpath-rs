{
  "name": "comments",
  "description": "Check various comment syntaxes",
  "source": "fhir-test-cases r5",
  "tests": [
    {
      "name": "testComment1",
      "expression": "2 + 2 // This is a single-line comment + 4",
      "input": null,
      "inputfile": "patient-example.json",
      "expected": [
        4
      ],
      "tags": [
        "r5-xml",
        "comments"
      ]
    },
    {
      "name": "testComment2",
      "expression": "// This is a multi line comment using // that\n  // should not fail during parsing\n  2+2",
      "input": null,
      "inputfile": "patient-example.json",
      "expected": [
        4
      ],
      "tags": [
        "r5-xml",
        "comments"
      ]
    },
    {
      "name": "testComment3",
      "expression": "2 + 2 \n      /*\nThis is a multi-line comment\nAny text enclosed within is ignored\n+2\n*/",
      "input": null,
      "inputfile": "patient-example.json",
      "expected": [
        4
      ],
      "tags": [
        "r5-xml",
        "comments"
      ]
    },
    {
      "name": "testComment4",
      "expression": "2 + 2 \n      /*\nThis is a multi-line comment\nAny text enclosed within is ignored\n*/\n+2",
      "input": null,
      "inputfile": "patient-example.json",
      "expected": [
        6
      ],
      "tags": [
        "r5-xml",
        "comments"
      ]
    },
    {
      "name": "testComment5",
      "expression": "/*\nThis is a multi-line comment\nAny text enclosed within is ignored\n*/\n2+2",
      "input": null,
      "inputfile": "patient-example.json",
      "expected": [
        4
      ],
      "tags": [
        "r5-xml",
        "comments"
      ]
    },
    {
      "name": "testComment6",
      "expression": "2 // comment\n/ 2",
      "input": null,
      "inputfile": "patient-example.json",
      "expected": [
        1.0
      ],
      "tags": [
        "r5-xml",
        "comments"
      ]
    },
    {
      "name": "testComment7",
      "expression": "2 + 2 /",
      "input": null,
      "inputfile": "patient-example.json",
      "expected": [],
      "tags": [
        "r5-xml",
        "comments"
      ],
      "expectError": true,
      "invalidKind": "syntax"
    },
    {
      "name": "testComment8",
      "expression": "2 + 2 /* not finished",
      "input": null,
      "inputfile": "patient-example.json",
      "expected": [],
      "tags": [
        "r5-xml",
        "comments"
      ],
      "expectError": true,
      "invalidKind": "syntax"
    },
    {
      "name": "testComment9",
      "expression": "2 + /* inline $@%^+ * */ 2 = 4",
      "input": null,
      "inputfile": "patient-example.json",
      "expected": [
        true
      ],
      "tags": [
        "r5-xml",
        "comments"
      ]
    }
  ]
}